// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id
  email       String   @unique
  displayName String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  Page Page[]
}

model Page {
  id        String   @id
  title     String
  html      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  User      User     @relation(fields: [userId], references: [id])

  KanbanBoard KanbanBoard[]
}

model KanbanBoard {
  id        String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Page Page[]
}

model Trash {
  id String @id
}

model AppSetting {
  id         String  @id
  appearance Boolean @default(true)
  language   String
}
